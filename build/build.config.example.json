{
    "name": "Bullet custom code build config",
    "description": "Define the JS/CSS source files to combine, with optional transpile and minify settings.",
    "baseDir": "..",
    "outDir": "dist",
    "js": {
        "sources": [
            "src/fading-scroll/fading-scroll.js",
            "src/lang-link/lang-link.js",
            "src/style-tweaks/style-tweaks.js",
            "src/unwrap-views/unwrap-views.js",
            "src/outline-popup/outline-popup.js",
            "src/navigation-popup/navigation-popup.js"
        ],
        "beforeHtml": [
        ],
        "afterHtml": [
        ],
        "outFile": "bullet-custom-body.html",
        "transpile": true,
        "minify": false,
        "target": "es2018",
        "banner": "/* Custom BODY build for Bullet */"
    },
    "css": {
        "sources": [
            "src/style-tweaks/style-tweaks.css",
            "src/database-display/database-display.css",
            "src/fading-scroll/fading-scroll.css",
            "src/lang-link/link-callouts.css",
            "src/outline-popup/outline-popup.css",
            "src/navigation-popup/navigation-popup.css"
        ],
        "outFile": "bullet-custom.css",
        "transpile": true,
        "minify": false,
        "browserslist": [
            "defaults",
            "not ie <= 11",
            "not op_mini all"
        ],
        "banner": "/* Custom CSS build for Bullet */"
    }
}